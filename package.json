{
  "name": "linepeek",
  "displayName": "LinePeek",
  "description": "Display number of lines of a file next to its name in the Explorer.",
  "version": "0.1.5-0",
  "publisher": "brunobrise",
  "icon": "linepeek.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "linepeek.showWorkspaceStats",
        "title": "LinePeek: Show Workspace Statistics"
      },
      {
        "command": "linepeek.toggleDisplayMode",
        "title": "LinePeek: Toggle Display Mode (Lines/Size/Both)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "LinePeek",
      "properties": {
        "linepeek.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable line count decorations globally."
        },
        "linepeek.ignoredFileExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "png",
            "jpg",
            "jpeg",
            "gif",
            "bmp",
            "ico",
            "tiff",
            "webp",
            "svg",
            "mp4",
            "mov",
            "avi",
            "mkv",
            "mp3",
            "wav",
            "flac",
            "zip",
            "tar",
            "gz",
            "7z",
            "rar",
            "exe",
            "dll",
            "so",
            "dylib",
            "bin",
            "iso",
            "pdf",
            "doc",
            "docx",
            "xls",
            "xlsx",
            "ppt",
            "pptx",
            "odt",
            "ods",
            "odp"
          ],
          "description": "List of file extensions to ignore (no line count will be shown)."
        },
        "linepeek.ignoredPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "**/dist/**",
            "**/build/**",
            "**/*.min.js",
            "**/*.map"
          ],
          "description": "Glob patterns for files/directories to ignore. Supports ** wildcards."
        },
        "linepeek.fileSizeLimitMB": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 1000,
          "description": "Maximum file size in MB to analyze. Files larger than this will be skipped."
        },
        "linepeek.displayMode": {
          "type": "string",
          "enum": [
            "lines",
            "size",
            "both"
          ],
          "enumDescriptions": [
            "Show line count only",
            "Show file size only",
            "Show both line count and file size"
          ],
          "default": "lines",
          "description": "What information to display in the Explorer badge."
        },
        "linepeek.useCompactNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Use compact notation for large numbers (e.g., 1.2k instead of 1234)."
        },
        "linepeek.colorThresholds": {
          "type": "object",
          "description": "Line count thresholds for color coding. Files are colored based on their line count.",
          "properties": {
            "small": {
              "type": "number",
              "default": 100,
              "description": "Files with fewer lines than this will be shown in the default color."
            },
            "medium": {
              "type": "number",
              "default": 500,
              "description": "Files with lines between 'small' and this will be shown in info color (blue)."
            },
            "large": {
              "type": "number",
              "default": 1000,
              "description": "Files with more lines than this will be shown in warning (yellow) or error (red) color."
            }
          },
          "default": {
            "small": 100,
            "medium": 500,
            "large": 1000
          }
        },
        "linepeek.showSloc": {
          "type": "boolean",
          "default": false,
          "description": "Show SLOC (Source Lines of Code) count in tooltip, excluding comments and blank lines."
        },
        "linepeek.showDirectoryTotals": {
          "type": "boolean",
          "default": false,
          "description": "Show cumulative line counts on directories. May impact performance in large workspaces."
        },
        "linepeek.enableLiveUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Update line counts in real-time as you edit files (debounced)."
        },
        "linepeek.liveUpdateDelayMs": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Delay in milliseconds before updating line counts after typing stops."
        },
        "linepeek.showGitChanges": {
          "type": "boolean",
          "default": false,
          "description": "Show lines added/removed since last commit in tooltip (requires Git extension)."
        },
        "linepeek.showPerformanceStats": {
          "type": "boolean",
          "default": false,
          "description": "Show cache performance statistics in the status bar."
        },
        "linepeek.languageSettings": {
          "type": "object",
          "description": "Language-specific settings. Keys are file extensions, values are settings objects.",
          "default": {},
          "additionalProperties": {
            "type": "object",
            "properties": {
              "colorThresholds": {
                "type": "object",
                "properties": {
                  "small": {
                    "type": "number"
                  },
                  "medium": {
                    "type": "number"
                  },
                  "large": {
                    "type": "number"
                  }
                }
              },
              "showSloc": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "node esbuild.js --production",
    "lint": "eslint src --ext ts",
    "format": "prettier --write .",
    "test": "npm run test-compile && node ./out/test/runTest.js",
    "test-compile": "tsc -p ./tsconfig.json",
    "prepare": "husky",
    "version:patch": "npm version patch -m \"chore(release): %s\"",
    "version:minor": "npm version minor -m \"chore(release): %s\"",
    "version:major": "npm version major -m \"chore(release): %s\"",
    "prerelease": "standard-version --prerelease",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:dry": "standard-version --dry-run",
    "postrelease": "git push --follow-tags origin main && npm run publish:vsce",
    "publish:vsce": "vsce publish",
    "publish:ovsx": "ovsx publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brunobrise/linepeek.git"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "mocha": "^10.3.0",
    "ovsx": "^0.8.3",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  }
}
